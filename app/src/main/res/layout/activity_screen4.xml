<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8072ACAC"
    tools:context=".Screen4">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#000000">


            <TextView
                android:id="@+id/titleWindow"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="7dp"
                android:background="#0072ACAC"
                android:padding="10dp"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="0dp"
                android:layout_height="158dp"
                android:layout_below="@+id/titleWindow"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="74dp"
                android:layout_marginTop="-160dp"
                android:layout_marginEnd="99dp"
                app:srcCompat="@drawable/bloom_couple" />


            <TextView
                android:id="@+id/messageWindow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/titleWindow"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-31dp"
                android:layout_marginEnd="2dp"
                android:padding="30dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/header1Window"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/messageWindow"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-31dp"
                android:layout_marginEnd="2dp"
                android:padding="30dp"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/message1Window"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/header1Window"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-31dp"
                android:layout_marginEnd="2dp"
                android:padding="30dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/header2Window"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/message1Window"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-31dp"
                android:layout_marginEnd="2dp"
                android:padding="30dp"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/message2Window"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/header2Window"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-31dp"
                android:layout_marginEnd="2dp"
                android:padding="30dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/header3Window"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/message2Window"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-31dp"
                android:layout_marginEnd="2dp"
                android:padding="30dp"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/message3Window"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/header3Window"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-31dp"
                android:layout_marginEnd="2dp"
                android:padding="30dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/header4Window"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/message3Window"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-31dp"
                android:layout_marginEnd="2dp"
                android:padding="30dp"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/message4Window"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/header4Window"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-31dp"
                android:layout_marginEnd="2dp"
                android:padding="30dp"
                android:textSize="16sp" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>